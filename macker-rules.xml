<?xml version="1.0"?>
<!DOCTYPE macker PUBLIC "-//innig//DTD Macker 0.4//EN" "http://innig.net/macker/dtd/macker-0.4.dtd">
<macker>
    <ruleset name="Nobody should get paths or executors directly, use LocalFileService and VirtualExecutor">
        <access-rule>
            <deny>
                <from class="net.cserny.**"/>
                <to class="java.nio.file.Paths"/>
            </deny>
        </access-rule>
        <access-rule>
            <deny>
                <from class="net.cserny.**"/>
                <to class="java.util.concurrent.ExecutorService"/>
                <allow>
                    <from class="net.cserny.VirtualExecutor"/>
                </allow>
            </deny>
        </access-rule>
    </ruleset>
</macker>